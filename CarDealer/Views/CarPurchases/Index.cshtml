@model IEnumerable<CarDealer.Models.CarPurchase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="CarPurchases" asp-action="Index" method="get">
    <p>
        Car Make: <input type="text" name="CarMake">
        <input type="submit" value="Filter" />
        Car Model: <input type="text" name="CarModel">
        <input type="submit" value="Filter" />
        Sales Person: <input type="text" name="SalesPerson">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesPerson)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name) @Html.DisplayFor(modelItem => item.Customer.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Make) @Html.DisplayFor(modelItem => item.Car.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPerson.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarPurchaseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarPurchaseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarPurchaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
